<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context=".Register" >

    <TextView
        android:id="@+id/first_name"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="FirstName" />

    <TextView
        android:id="@+id/uname"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lname"
        android:layout_below="@+id/lname"
        android:layout_marginTop="30dp"
        android:text="UserName" />

    <TextView
        android:id="@+id/lname"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/first_name"
        android:layout_marginTop="30dp"
        android:text="LastName" />

    <TextView
        android:id="@+id/passwd"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uname"
        android:layout_alignRight="@+id/uname"
         android:layout_marginTop="30dp"
        android:layout_marginBottom="19dp"
        android:text="Password" />

    <TextView
        android:id="@+id/email"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwd"
        android:layout_below="@+id/passwd"
        android:layout_marginTop="14dp"
        android:text="EmailId" />

    <EditText
        android:id="@+id/inLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignLeft="@+id/inFname"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/inEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/inUname"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/inUname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwd"
        android:layout_alignLeft="@+id/inLname"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/inPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passwd"
        android:layout_alignBottom="@+id/passwd"
        android:layout_alignLeft="@+id/inEmail"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/inFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/first_name"
        android:layout_alignBottom="@+id/first_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/submit"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Register Here!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showTable"
        android:layout_toRightOf="@+id/showTable"
        android:onClick="close"
        android:text="Clear"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showTable"
        android:layout_alignLeft="@+id/email"
        android:onClick="Adddata"
        android:text="Submit"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/showTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:onClick="Showdata"
        android:text="Show Table"
        android:textColor="#FFFFFF" />

</RelativeLayout>
